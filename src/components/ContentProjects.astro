---
interface Project {
    name: string;
    description: string;
    link: {
        url?: string;
        target?: string;
        title?: string;
        buttonLabel?: string;
    };
    id: string; // ID for tracking visitor counts
};

const projects: Project[] = [{
    name: 'Minimalist Portfolio',
    description: 'A portfolio website built with Astro. It features a clean, responsive design and is easy to update and customize.',
    link: {
        url: 'https://harigo.me',
        target: '_blank',
        title: 'Harigo.me',
        buttonLabel: 'View Project'
    },
    id: 'portfolio' // Identifier for this project (for ga4)
}, {
    name: 'Undisclosed Poker Project',
    description: 'A website for sharing poker hands that happened in real life.',
    link: {
        buttonLabel: 'Coming Soon',
        url: '',
    },
    id: 'undisclosed'
}];
---

<div>

    <!-- <h2 class="text-2xl font-bold text-white mb-4">Latest Projects</h2> -->

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

        {projects.map(project =>

            <div class="border border-gray-700 rounded-lg p-5 bg-black hover:bg-gray-900 transition-colors duration-300 flex flex-col">

                <div class="mb-4">
                    <h3 class="text-xl font-semibold text-white mb-2">
                        {project.name}
                    </h3>

                    <p class="text-gray-400 text-sm sm:text-base">
                        {project.description}
                    </p>

                    {project.id && (
                        <p class="text-xs text-primary mt-2 flex items-center gap-1 visitor-count" data-project-id={project.id}>
                            <span>Visitor stats coming soon</span>
                        </p>
                    )}
                </div>

                <div class="mt-auto w-full">
                    {(!project.link.url || project.link.url === '') ? (
                        <button 
                            disabled
                            class="
                                block w-full px-4 py-2.5 text-center
                                border border-gray-800 rounded-lg
                                text-gray-600 cursor-not-allowed
                                opacity-70 bg-gray-900
                            ">
                            {project.link.buttonLabel || 'Coming Soon'}
                        </button>
                    ) : (
                        <a
                            href={project.link.url}
                            title={project.link.title || project.name}
                            target={project.link.target || '_blank'}
                            class="
                                block w-full px-4 py-2.5 text-center
                                border border-gray-600 rounded-lg
                                hover:text-primary hover:border-primary
                                transition-colors duration-200
                            ">
                            {project.link.buttonLabel || 'Open Project Website'}
                        </a>
                    )}
                </div>

            </div>
        )}

    </div>

</div>

<script>
    // Fetch visitor data from GA4 API
    fetch('/.netlify/functions/ga4-visitors/')
        .then(res => res.json())
        .then(data => {
            // Update all visitor count elements
            document.querySelectorAll('.visitor-count').forEach(element => {
                const projectId = element.getAttribute('data-project-id');
                const span = element.querySelector('span');
                if (!span) return;
                // If the API returns data for this specific project
                if (projectId && data[projectId]) {
                    span.innerHTML = `<svg class=\"w-3 h-3 inline align-text-bottom mr-1\" fill=\"none\" stroke=\"currentColor\" viewBox=\"0 0 24 24\" xmlns=\"http://www.w3.org/2000/svg\"><path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M15 12a3 3 0 11-6 0 3 3 0 016 0z\" /><path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"2\" d=\"M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z\" /></svg> ${data[projectId].toLocaleString()} unique visitors this month`;
                } else {
                    span.textContent = 'Visitor stats coming soon';
                }
            });
        })
        .catch(() => {
            // Handle errors by updating all elements
            document.querySelectorAll('.visitor-count').forEach(element => {
                const span = element.querySelector('span');
                if (span) span.textContent = 'Visitor stats coming soon';
            });
        });
</script>
