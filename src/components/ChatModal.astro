---
// Chat Modal Component
---

<!-- Chat Modal Overlay -->
<div id="chat-modal" class="fixed inset-0 bg-black/80 backdrop-blur-sm z-50 hidden items-center justify-center p-4">
    <div class="w-full max-w-4xl h-[90vh] flex flex-col bg-black border-2 border-gray-600 rounded-lg shadow-2xl">

        <!-- Header -->
        <div class="bg-black border-b border-gray-600 p-4 flex items-center justify-between rounded-t-lg">
            <div class="flex items-center gap-3">
                <img src="/img/avatar.jpg" alt="Harigo" class="w-8 h-8 rounded-full object-cover" />
                <div>
                    <h2 class="text-lg font-bold text-white">Chat with Harigo</h2>
                    <p class="text-xs text-gray-400">Ask me about my experience, projects, or skills</p>
                </div>
            </div>
            <button
                id="close-chat-modal"
                class="text-gray-400 hover:text-primary transition-colors p-2"
                title="Close chat"
                aria-label="Close chat"
            >
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                </svg>
            </button>
        </div>

        <!-- Messages Container -->
        <div id="chat-messages-container" class="flex-1 overflow-y-auto p-4 space-y-4 bg-black">
            <!-- Welcome message -->
            <div class="flex gap-3 items-start">
                <img src="/img/avatar.jpg" alt="Harigo" class="flex-shrink-0 w-8 h-8 rounded-full object-cover" />
                <div class="flex-1">
                    <div class="bg-gray-900 border border-gray-700 rounded-lg p-3 text-sm">
                        <p class="text-gray-100">
                            Hi! I'm Harigo's AI assistant. Feel free to ask me anything about my experience, projects, skills, or certifications!
                        </p>
                        <p class="text-gray-400 text-xs mt-2">
                            Try asking: "What's your experience?", "Tell me about your projects", or "What are your skills?"
                        </p>
                    </div>
                    <span class="text-xs text-gray-500 mt-1 block">Just now</span>
                </div>
            </div>
        </div>

        <!-- Input Area -->
        <div class="bg-black border-t border-gray-600 p-4 rounded-b-lg">
            <form id="chat-modal-form" class="flex gap-2">
                <input
                    type="text"
                    id="chat-modal-input"
                    placeholder="Type your message..."
                    maxlength="500"
                    class="flex-1 bg-gray-900 border border-gray-700 rounded-lg px-4 py-2 text-sm text-gray-100 placeholder-gray-500 focus:outline-none focus:border-primary transition-colors"
                    autocomplete="off"
                />
                <button
                    type="submit"
                    id="chat-modal-send-button"
                    class="bg-primary hover:bg-primary/80 text-black font-medium px-6 py-2 rounded-lg transition-colors flex items-center gap-2 disabled:opacity-50 disabled:cursor-not-allowed"
                >
                    <span>Send</span>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
                    </svg>
                </button>
            </form>
            <p class="text-xs text-gray-500 mt-2">
                Messages remaining: <span id="chat-modal-remaining-count">20</span>
            </p>
        </div>
    </div>
</div>

<script>
    // Generate or retrieve session ID
    function getSessionId() {
        let sessionId = sessionStorage.getItem('chat-session-id');
        if (!sessionId) {
            sessionId = `session-${Date.now()}-${Math.random().toString(36).substring(2, 15)}`;
            sessionStorage.setItem('chat-session-id', sessionId);
        }
        return sessionId;
    }

    const sessionId = getSessionId();
    const chatModal = document.getElementById('chat-modal');
    const closeChatModalBtn = document.getElementById('close-chat-modal');
    const messagesContainer = document.getElementById('chat-messages-container');
    const chatForm = document.getElementById('chat-modal-form');
    const messageInput = document.getElementById('chat-modal-input');
    const sendButton = document.getElementById('chat-modal-send-button');
    const remainingCountEl = document.getElementById('chat-modal-remaining-count');

    // Load remaining message count from sessionStorage
    function loadRemainingCount() {
        const stored = sessionStorage.getItem('chat-remaining-count');
        if (stored && remainingCountEl) {
            remainingCountEl.textContent = stored;
        }
    }

    // Save remaining message count to sessionStorage
    function saveRemainingCount(count) {
        sessionStorage.setItem('chat-remaining-count', count.toString());
    }

    // Load chat history from localStorage
    function loadChatHistory() {
        const history = localStorage.getItem('chat-history');
        if (history) {
            try {
                const messages = JSON.parse(history);
                messages.forEach(msg => {
                    if (msg.role === 'user') {
                        addUserMessage(msg.content, false);
                    } else {
                        addBotMessage(msg.content, false);
                    }
                });
            } catch (e) {
                console.error('Failed to load chat history:', e);
            }
        }
    }

    // Save message to history
    function saveToHistory(role, content) {
        const history = localStorage.getItem('chat-history');
        let messages = [];
        if (history) {
            try {
                messages = JSON.parse(history);
            } catch (e) {
                messages = [];
            }
        }
        messages.push({ role, content });
        // Keep only last 20 messages
        if (messages.length > 20) {
            messages = messages.slice(-20);
        }
        localStorage.setItem('chat-history', JSON.stringify(messages));
    }

    // Format time
    function formatTime() {
        const now = new Date();
        return now.toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit', hour12: true });
    }

    // Scroll to bottom
    function scrollToBottom() {
        if (messagesContainer) {
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }
    }

    // Add user message to UI
    function addUserMessage(text, save = true) {
        const messageDiv = document.createElement('div');
        messageDiv.className = 'flex gap-3 items-start justify-end';
        messageDiv.innerHTML = `
            <div class="flex-1 flex flex-col items-end">
                <div class="bg-primary/10 border border-primary/30 rounded-lg p-3 text-sm max-w-[80%]">
                    <p class="text-gray-100">${escapeHtml(text)}</p>
                </div>
                <span class="text-xs text-gray-500 mt-1">${formatTime()}</span>
            </div>
            <div class="flex-shrink-0 w-8 h-8 rounded-full bg-gray-700 flex items-center justify-center text-gray-300 font-bold text-sm">
                Y
            </div>
        `;
        messagesContainer?.appendChild(messageDiv);
        scrollToBottom();
        if (save) {
            saveToHistory('user', text);
        }
    }

    // Add bot message to UI
    function addBotMessage(text, save = true) {
        const messageDiv = document.createElement('div');
        messageDiv.className = 'flex gap-3 items-start';
        messageDiv.innerHTML = `
            <img src="/img/avatar.jpg" alt="Harigo" class="flex-shrink-0 w-8 h-8 rounded-full object-cover" />
            <div class="flex-1">
                <div class="bg-gray-900 border border-gray-700 rounded-lg p-3 text-sm">
                    <p class="text-gray-100">${escapeHtml(text)}</p>
                </div>
                <span class="text-xs text-gray-500 mt-1 block">${formatTime()}</span>
            </div>
        `;
        messagesContainer?.appendChild(messageDiv);
        scrollToBottom();
        if (save) {
            saveToHistory('bot', text);
        }
    }

    // Add typing indicator
    function addTypingIndicator() {
        const typingDiv = document.createElement('div');
        typingDiv.id = 'typing-indicator';
        typingDiv.className = 'flex gap-3 items-start';
        typingDiv.innerHTML = `
            <img src="/img/avatar.jpg" alt="Harigo" class="flex-shrink-0 w-8 h-8 rounded-full object-cover" />
            <div class="flex-1">
                <div class="bg-gray-900 border border-gray-700 rounded-lg p-3 text-sm">
                    <div class="flex gap-1">
                        <div class="w-2 h-2 bg-gray-500 rounded-full animate-bounce"></div>
                        <div class="w-2 h-2 bg-gray-500 rounded-full animate-bounce" style="animation-delay: 0.1s"></div>
                        <div class="w-2 h-2 bg-gray-500 rounded-full animate-bounce" style="animation-delay: 0.2s"></div>
                    </div>
                </div>
            </div>
        `;
        messagesContainer?.appendChild(typingDiv);
        scrollToBottom();
    }

    // Remove typing indicator
    function removeTypingIndicator() {
        const typingIndicator = document.getElementById('typing-indicator');
        if (typingIndicator) {
            typingIndicator.remove();
        }
    }

    // Escape HTML to prevent XSS
    function escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
    }

    // Open modal
    function openChatModal() {
        if (chatModal) {
            chatModal.classList.remove('hidden');
            chatModal.classList.add('flex');
            loadChatHistory();
            loadRemainingCount();
            scrollToBottom();
            messageInput?.focus();
        }
    }

    // Close modal
    function closeChatModal() {
        if (chatModal) {
            chatModal.classList.add('hidden');
            chatModal.classList.remove('flex');
        }
    }

    // Close modal when clicking close button
    closeChatModalBtn?.addEventListener('click', closeChatModal);

    // Close modal when clicking outside
    chatModal?.addEventListener('click', (e) => {
        if (e.target === chatModal) {
            closeChatModal();
        }
    });

    // Close modal on Escape key
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && chatModal && !chatModal.classList.contains('hidden')) {
            closeChatModal();
        }
    });

    // Listen for open chat modal event
    window.addEventListener('open-chat-modal', openChatModal);

    // Handle form submission
    chatForm?.addEventListener('submit', async (e) => {
        e.preventDefault();

        const message = messageInput?.value.trim();
        if (!message) return;

        // Disable input while processing
        if (messageInput) messageInput.disabled = true;
        if (sendButton) sendButton.disabled = true;

        // Add user message to UI
        addUserMessage(message);

        // Clear input
        if (messageInput) messageInput.value = '';

        // Show typing indicator
        addTypingIndicator();

        try {
            // Call the chat function
            const response = await fetch('/.netlify/functions/chat', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    message,
                    sessionId
                })
            });

            const data = await response.json();

            // Remove typing indicator
            removeTypingIndicator();

            if (!response.ok) {
                throw new Error(data.message || data.error || 'Failed to get response');
            }

            // Add bot response
            addBotMessage(data.response);

            // Update remaining messages count
            if (data.remainingMessages !== undefined && remainingCountEl) {
                remainingCountEl.textContent = data.remainingMessages;
                saveRemainingCount(data.remainingMessages);
            }

        } catch (error) {
            removeTypingIndicator();
            console.error('Chat error:', error);

            // Show error message
            const errorDiv = document.createElement('div');
            errorDiv.className = 'bg-red-900/20 border border-red-600/30 rounded-lg p-3 text-sm text-red-400';
            errorDiv.textContent = error.message || 'Failed to send message. Please try again.';
            messagesContainer?.appendChild(errorDiv);
            scrollToBottom();
        } finally {
            // Re-enable input
            if (messageInput) messageInput.disabled = false;
            if (sendButton) sendButton.disabled = false;
            messageInput?.focus();
        }
    });
</script>

<style>
    #chat-messages-container::-webkit-scrollbar {
        width: 8px;
    }

    #chat-messages-container::-webkit-scrollbar-track {
        background: #000;
    }

    #chat-messages-container::-webkit-scrollbar-thumb {
        background: #4b5563;
        border-radius: 4px;
    }

    #chat-messages-container::-webkit-scrollbar-thumb:hover {
        background: #6b7280;
    }
</style>
